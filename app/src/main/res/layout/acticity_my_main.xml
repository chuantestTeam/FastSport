<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#FFF">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#42c2b3">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/activity_my_main_iv_setting"
            android:src="@mipmap/set"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/activity_my_main_iv_touxiang"
            android:src="@mipmap/touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/activity_my_main_iv_setting" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_below="@+id/activity_my_main_iv_touxiang"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/activity_my_main_tv_quanxing1"
                android:src="@mipmap/quanxing"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/activity_my_main_iv_touxiang" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/activity_my_main_iv_quanxing2"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="5dp"
                android:src="@mipmap/quanxing"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/activity_my_main_tv_quanxing1" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/activity_my_main_iv_banxing3"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="5dp"
                android:src="@mipmap/banxing"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/activity_my_main_iv_quanxing2" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/activity_my_main_iv_banxing4"
                android:src="@mipmap/banxing"
                android:layout_marginStart="5dp"
                android:layout_alignTop="@+id/activity_my_main_iv_banxing3"
                android:layout_toEndOf="@+id/activity_my_main_iv_banxing3" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/activity_my_main_iv_banxing5"
                android:layout_marginStart="5dp"
                android:src="@mipmap/banxing"
                android:layout_alignTop="@+id/activity_my_main_iv_banxing4"
                android:layout_toEndOf="@+id/activity_my_main_iv_banxing4" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小明"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:id="@+id/activity_my_main_tv_name"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/activity_my_main_iv_touxiang" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/activity_my_main_iv_man"
            android:layout_marginStart="6dp"
            android:src="@mipmap/man"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/activity_my_main_tv_name" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/activity_my_main_iv_phone"
            android:src="@mipmap/phone"
            android:layout_alignBottom="@+id/activity_my_main_iv_touxiang"
            android:layout_toEndOf="@+id/activity_my_main_iv_touxiang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13990081234"
            android:textSize="15sp"
            android:id="@+id/textView2"
            android:textColor="#FFF"
            android:layout_alignTop="@+id/activity_my_main_iv_phone"
            android:layout_toEndOf="@+id/activity_my_main_iv_phone" />
    </RelativeLayout>

    <View
        android:id="@+id/divider0"
        android:layout_below="@id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ededed"/>

    <RelativeLayout
        android:id="@+id/rl_zhuye"
        android:layout_below="@+id/divider0"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_zhuye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/zhuye"
            />

        <TextView
            android:id="@+id/tv_zhuye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_zhuye"
            android:layout_marginLeft="10dp"
            android:text="我的主页"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/you"
            android:id="@+id/activity_my_main_iv_enterhome"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_below="@+id/rl_zhuye"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ededed"/>

    <RelativeLayout
        android:id="@+id/rl_tongji"
        android:layout_below="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_tongji"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/tongji"
            />

        <TextView
            android:id="@+id/tv_tongji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_tongji"
            android:layout_marginLeft="10dp"
            android:text="我的统计"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/you"
            android:id="@+id/activity_my_main_iv_entertotal"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_below="@+id/rl_tongji"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ededed"/>

    <RelativeLayout
        android:id="@+id/rl_guanli"
        android:layout_below="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/iv_guanli"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/guanli"
            />

        <TextView
            android:id="@+id/tv_guanli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_guanli"
            android:layout_marginLeft="10dp"
            android:text="我的管理"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/you"
            android:id="@+id/activity_my_main_iv_entermanager"/>

    </RelativeLayout>
    <View
    android:id="@+id/divider5"
    android:layout_below="@+id/rl_guanli"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:layout_above="@+id/lr_below"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/lr_below">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_my_main_iv_plan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/plan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_my_main_iv_plan"
                android:layout_gravity="center"
                android:text="计划"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_my_main_iv_student"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/student" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="学员"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_my_main_iv_woefocus"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:src="@mipmap/wode_focus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_my_main_iv_woefocus"
                android:layout_gravity="center"
                android:text="我的"

                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
